
@model EADProjectMVC.Models.Wallet
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowUpdateWallet</title>
</head>
<body>
    <div> 
        <div class="container">
            <div class="row">
                @using (Html.BeginForm("UpdateTheWallet", "Admin", FormMethod.Post))
                {
                    <div class="col-md-3">

                        <img src="~/Images/@Model.image" />

                    </div>
                    <div class="col-md-3">
                        <h4> Price:</h4>  <input type="text" value="@Model.price" name="price" /><br />
                        Size:   <input type="text" value="@Model.Size" name="Size" /><br />
                        Company:<input type="text" value="@Model.company" name="company" /><br />
                        <input type="text" value="@Model.Id" name="Id" style="display:none" />



                        <button type="submit" class="btn btn-primary">Update</button>

                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
