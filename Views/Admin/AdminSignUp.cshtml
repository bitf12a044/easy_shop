                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Add New Admin!</h2>
                    <!--<form action="~/Account/SignUp" method="post">-->
                    @using (Html.BeginForm("AdminAdd", "Admin", FormMethod.Post))
                    {
                        @*<input type="text" placeholder="Name" name="Name"><br /><br />
                            <input type="email" placeholder="Email Address" name="Email"><br /><br />
                            <input type="password" placeholder="Password" name="Passward"><br /><br />*@

                        @Html.TextBoxFor(model => model.Name, new { placeholder = "Name" })<br /><br />
                        @Html.TextBoxFor(model => model.Email, new { placeholder = "Email", id = "uname" })
                <p id="p1" style="color:red"> </p><br /><br />
                        
                        
                        <button type="button" id="bb1" class="btn btn-primary" onclick="A()">Check</button><br /><br />
                        
