@model EADProjectMVC.Models.Admin
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminSignUp</title>
    <script>
       
            
            //$('uname').focusin(function () {
            //    $('#p1').text("**");
            //});
            function A() {
               
                    var username = $('#uname').val();
                    $.getJSON("/Admin/NewAdminCheck?uname=" + username, function (result) {
                        if (result) {
                            //var abc = document.getElementById("uname").text(" ");
                            $('#p1').text("  *UserName already exist");
                        }
                        else {
                            $('#p1').text("  User Available");
                            $('#p1').css("color","green")
                        }
                    });
               
            }
       
    </script>

</head>
<body>
    <div>
        <div class="row">
            <div class="col-sm-3">


            </div>
            <!---->
